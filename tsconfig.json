{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./lib",
    "sourceMap": true,
    "declaration": true,
    "strict": false,
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "declarationDir": "./lib",
    "types": ["react"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"],
  "compileOnSave": true
}
